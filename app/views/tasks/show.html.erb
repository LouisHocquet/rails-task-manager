<h1 class="mb-3"><%= @task.title %></h1>

<div class="card">
  <div class="card-body bg-light">
    <%= @task.details %>
  </div>
</div>

<div class="d-flex mt-2">
  <input class="d-flex form-check-input me-1" type="checkbox"
    <%= @task.completed ? "checked" : "" %>
  >
  <div class="title">
    <%= @task.completed ? "This task is completed" : "This task is not completed yet" %>
  </div>
</div>

<%= link_to "Edit task",
  edit_task_path
%>

<hr>

<%= link_to "Back to list",
  tasks_path
%>
